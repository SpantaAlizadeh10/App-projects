{
  "manifest_version": 3,
  "name": "Ads Blocker for YouTube",
  "version": "1.0",
  "description": "Block YouTube ads extension",
  "icons": {
    "48": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["adsblocker.js"],
      "run_at": "document_idle"
    }
  ]
}
